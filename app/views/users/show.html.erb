<div class="main">
  <div class="inner">
    <div class="user_wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table_col1">名前</th>
            <td class="table_col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table_col1">プロフィール</th>
            <td class="table_col2"><%= @user.profile %></td>
          </tr>
          <tr>
            <th class="table_col1">所属</th>
            <td class="table_col2"><%= @user.occupation %></td>
          </tr>
          <tr>
            <th class="table_col1">役職</th>
            <td class="table_col2"><%= @user.position %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.name}さんのプロトタイプ"%>
      </h2>
      <div class="user_card">
        <%= render partial: 'prototypes/prototype', collection: @user.prototypes %>
      </div>
    </div>
  </div>
</div>